{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2018",
        "moduleResolution": "node",
        "inlineSourceMap": true,
        "outDir": "dist/",
        "rootDir": "src/",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true
    },
    "exclude": ["**/node_modules/"]
}
